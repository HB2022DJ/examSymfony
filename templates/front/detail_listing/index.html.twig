<!DOCTYPE html>

<title>details</title>

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<!--For Page-->
	<div class="container">
		<div class="d-flex justify-content-between">
			<a class="btn btn-primary h-50 my-auto" href="{{ path('app_home') }}">
				Retour
			</a>
		</div>
		<div
			class="page">

			<!--For Row containing all card-->
			<div
				class="row">


				<!--Card 1-->
				{% for list in details %}
					<div class="col-sm">
						<div
							class="card card-cascade card-ecommerce wider shadow mb-5 ">

							<!--Card image-->
							<div class="view view-cascade overlay text-center">
								<img class="card-img-top" src="https://www.geekqc.ca/wp-content/uploads/2016/07/fiat-500-pikacento-192673.jpg" alt=" voiture pokemon">
								<a>
									<div class="mask rgba-white-slight"></div>
								</a>
							</div>


							<!--Card Body-->
							<div
								class="card-body card-body-cascade text-center">

								<!--Card Title-->
								<h4 class="card-title">
									<strong>
										<a href="">{{list.title}}</a>
									</strong>
								</h4>

								<!-- Card Description-->

								{# <p>{{ list.createdAt}}</p> #}
								<p class="card-text">{{list.description}}
								</p>


								<p class="price">{{list.price}}â‚¬</p>


								<!--Card footer-->
								<div class="card-footer">
									<p>{{ list.mileage }}km
									</p>
									<p></p>
								</div>


							</div>
						</div>
					</div>
				{% endfor %}
			{% endblock %}
