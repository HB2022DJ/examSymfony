<!DOCTYPE html>

<title>Brand index</title>

{% block body %}
	<h1>Brand index</h1>

	<div class="container">
		<div class="d-flex justify-content-between">
			<a class="btn btn-primary h-50 my-auto" href="{{ path('app_home') }}">
				Retour
			</a>
		</div>

		<table class="table table-dark table-hover table-striped mt-3">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for brand in brands %}
					<tr>
						<td>{{ brand.id }}</td>
						<td>{{ brand.name }}</td>
						<td>
							<a href="{{ path('app_brand_show', {'id': brand.id}) }}">voir</a>
							<a href="{{ path('app_brand_edit', {'id': brand.id}) }}">editer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_brand_new') }}">ajouter une nouvelle marque</a>
	{% endblock %}
